   
@{
    ViewBag.Title = "Urun Ekle";
}
@using Ornek.Models


<div class="row">
    <div class="col-md-12">
        <div class="block">
								<div class="block-heading">
									<div class="main-text h2">
										Default Form
									</div>
									<div class="block-controls">
										<a href="/Urun/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></a>
										<span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
									</div>
								</div>
								<div class="block-content-outer">
									<div class="block-content-inner">
                                        <form method="post" action="/Urun/UrunEkle" role="form">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Urun Adi</label>
                                                <input name="UrunAdi" type="text" class="form-control" id="exampleInputUrunAdi" placeholder="Urun Adi ">
                                            </div>
                                            

                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Kategori</label>
                                                <select name="KategoriID" class="form-control">
                                                    @foreach (Kategoriler  ktg in ViewBag.Kategoriler )
                                                    {
                                                    <option value="@ktg.KategoriID">@ktg.KategoriAdi</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Birimdeki Miktar</label>
                                                <input type="text" class="form-control" id="exampleInputBirimdekiMiktar"name="BirimdekiMiktar" placeholder="Birimdeki Miktar">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Fiyat</label>
                                                <input type="number" class="form-control" id="exampleInputFiyat"name="BirimFiyati" placeholder="Fiyat">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Stok</label>
                                                <input type="number" class="form-control" id="exampleInputStok" name="HedefStokDuzeyi" placeholder="Stok"> 
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox"> Check me out
                                                </label>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Kaydet</button>
                                        </form>
									</div>
								</div>
							</div>
    </div>


</div>

