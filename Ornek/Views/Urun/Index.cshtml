
@{
    ViewBag.Title = "Index";
}
@using Ornek.Models
@model List<Urunler>

<div class="row"><div class="col-md-12">
    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                Urunler
            </div>
            <div class="block-controls">
                
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                <a href="~/Urun/UrunEkle"class="btn btn-success">Yeni Urun Ekle</a>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Urun Adi</th>
                            
                            <th>Kategori</th>
                            <th>Birimdeki Miktar</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Sonlandi</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (Urunler u in Model)
                      {
                        <tr>
                            <td>@u.UrunAdi</td>
                            
                            <td>@u.Kategoriler.KategoriAdi</td>
                            <td>@u.BirimdekiMiktar.</td>
                            <td>@u.BirimFiyati</td>
                            <td>@u.HedefStokDuzeyi</td>
                            
                            <td>
                                <span class="label label-success">Complete</span>
                            </td>
                            <td><a href="~/Urun/Sil/@u.UrunID" class="btn btn-danger" >Sil</a></td>
                        </tr>
                      }
                        
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div></div>